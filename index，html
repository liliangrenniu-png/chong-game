    <p>ç‚¹å‡»è¿™é¢—è›‹ï¼Œç›´åˆ°å®ƒè£‚å¼€ï¼</p>
    
    <div id="egg">ğŸ¥š</div>
    
    <div id="result" class="hidden">
        <div id="cat-display"></div>
        <h2 id="cat-name"></h2>
        <button onclick="resetGame()">å†å­µä¸€é¢—ï¼</button>
    </div>

    <script>
        let clicks = 0;
        const target = 10;
        const cats = [
            {icon: 'ğŸ±', name: 'å¤§æ©˜çŒ«ï¼ˆååªæ©˜çŒ«ä¹åªèƒ–ï¼‰'},
            {icon: 'ğŸ±â€ğŸ‘¤', name: 'å¿è€…é»‘çŒ«'},
            {icon: 'ğŸ¦', name: 'å°ç‹®å­çŒ«'},
            {icon: 'ğŸ¯', name: 'è™æ–‘çŒ«'},
            {icon: 'âœ¨ğŸ±', name: 'ç‹¬è§’å¹»æƒ³çŒ«ï¼ˆç¨€æœ‰ï¼ï¼‰'}
        ];

        const egg = document.getElementById('egg');
        const result = document.getElementById('result');

        egg.onclick = function() {
            clicks++;
            if (clicks >= target) {
                hatch();
            } else {
                egg.style.opacity = 1 - (clicks/target * 0.5); // è›‹è¶Šæ¥è¶Šé€æ˜ï¼ˆå¿«è£‚äº†ï¼‰
            }
        };

        function hatch() {
            egg.classList.add('hidden');
            result.classList.remove('hidden');
            const randomCat = cats[Math.floor(Math.random() * cats.length)];
            document.getElementById('cat-display').innerText = randomCat.icon;
            document.getElementById('cat-name').innerText = "å“‡ï¼ä½ å­µå‡ºäº†ä¸€åª " + randomCat.name;
        }

        function resetGame() {
            clicks = 0;
            egg.style.opacity = 1;
            egg.classList.remove('hidden');
            result.classList.add('hidden');
        }
    </script>
